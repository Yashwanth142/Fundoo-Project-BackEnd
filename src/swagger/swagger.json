{
  "swagger": "2.0",
  "info": {
    "version": "V1",
    "title": "Fundoo Note",
    "description": "This is the replica of google keep.It contains all the ApI's of user and notes."
  },
  "host": "localhost:3000",
  "basePath": "/api/v1/",
  "tags": [
    {
      "name": "User and Notes API's Using express CLI",
      "description": "Creating all user and notes API."
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "description": "Register new user",
        "parameters": [
          {
            "name": "Register new user",
            "in": "body",
            "description": "User Registered",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user registered succesfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "/users/login": {
      "post": {
        "tags": ["User"],
        "description": "User login",
        "parameters": [
          {
            "name": "login user",
            "in": "body",
            "description": "User login",
            "schema": {
              "$ref": "#/definitions/login"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User login successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "/users/forgotPassword": {
      "post": {
        "tags": ["User"],
        "description": "forgotPassword",
        "parameters": [
          {
            "name": "forgotPassword",
            "in": "body",
            "description": "forgotPassword",
            "schema": {
              "$ref": "#/definitions/forgotPassword"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "sucessfully logged in"
          },
          "404": {
            "description": "email or password doesn't match"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "/users/resetPassword/{token}": {
      "post": {
        "tags": ["User"],
        "description": "resetPassword",
        "parameters": [
          {
            "name": "resetPassword",
            "in": "body",
            "description": "resetPassword",
            "schema": {
              "$ref": "#/definitions/resetPassword"
            }
          },
          {
            "name": "token",
            "in": "path",
            "description": "token"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "sucessfully logged in"
          },
          "404": {
            "description": "email or password doesn't match"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "/note": {
      "post": {
        "tags": ["Note"],
        "description": "Create new Note",
        "parameters": [
          {
            "name": "Create Note",
            "in": "body",
            "description": "Create Note",
            "schema": {
              "$ref": "#/definitions/createnote"
            }
          }
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note created Successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },

      "get": {
        "tags": ["Note"],
        "description": "Get All Notes",
        "security": [
          {
            "Authorization": []
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Fetched Notes successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "/note/{_id}": {
      "get": {
        "tags": ["Note"],
        "description": "get Note by id",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Fetched Note successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "tags": ["Note"],
        "description": "update Note by id",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true
          },
          {
            "name": "Update Note",
            "in": "body",
            "description": "Update Note",
            "schema": {
              "$ref": "#/definitions/createnote"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Updated Note successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "tags": ["Note"],
        "description": "Delete Note by id",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Deleted Note successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/note/{_id}/addtrash": {
      "put": {
        "tags": ["Note"],
        "description": "Add To Trash",
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true
          }
        ],
        "security": [
          {
            "Authorization": []
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note added to trash"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/note/{_id}/removetrash": {
      "put": {
        "tags": ["Note"],
        "description": "Add To Trash",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note Removed from trash"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/note/{_id}/addArchive": {
      "put": {
        "tags": ["Note"],
        "description": "Add To Archive",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note added to Archive"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    
    "/note/{_id}/removeArchive": {
      "put": {
        "tags": ["Note"],
        "description": "Note Removed from Archive",
        "security": [
          {
            "Authorization": []
          }
        ],
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note Removed from Archive"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },

  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmpassword": {
          "type": "string"
        }
      }
    },
    "login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "forgotPassword": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        }
      }
    },
    "resetPassword": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string"
        },
        "confirmpassword": {
          "type": "string"
        }
      }
    },
    "createnote": {
      "type": "object",
      "properties": {
        "Title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "trash": {
          "type": "boolean"
        },
        "archive": {
          "type": "boolean"
        }
      }
    }
  },
  "securityDefinitions": {
    "Authorization": {
      "description": "Authentication token",
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
